<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HLSMP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/fonts/googlefont.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/WebApplication1_Login_Check.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar h2 {
            color: #333;
        }

        .logo_all {
            display: flex;
        }

        .logo_mar {
            margin-top: 24px;
        }

        .logo_text {
            font-size: 25px;
            margin-left: 16px;
            font-weight: bold;
        }

        .logo_text2 {
            margin-left: 15px;
            color: #5b5b5b;
        }
    </style>
</head>
<body class="back_1">
    <section class="header_11">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="header_top p-2">
                        <a href="#">
                            <div class="logo_head">
                                <div>
                                    <img src="~/images/logo.webp" width="65px" />
                                </div>
                                <div class="logo_text_all">
                                    <span class="logo_text">Department of Revenue & Disaster Management</span><br />
                                    <span style="color:#000; margin-left:15px">Government of Haryana</span>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="col-md-4">

                    @* ================================   login/Logout ====================================*@
                    @{
                        var loginUser = Context.Session.GetString("LoginUser");
                    }


                    @if (string.IsNullOrEmpty(loginUser))
                    {
                        <!-- User is not logged in -->
                        <div class="login_btn">
                            <a class="login_btn1" asp-controller="Login" asp-action="LoginView">Login</a>
                        </div>
                        <div class="login_btn d-none">
                            <a class="login_btn1" asp-controller="Logout" asp-action="Logout">Logout</a>
                        </div>
                    }
                    else
                    {
                        <!-- User is logged in -->
                        <div class="login_btn d-none">
                            <a class="login_btn1" asp-controller="Login" asp-action="LoginView">Login</a>
                        </div>
                        <div class="login_btn">
                            <a class="login_btn1" asp-controller="Logout" asp-action="Logout">Logout</a>
                        </div>
                    }

                    @* ================================ /login Logout button====================================*@

                </div>
            </div>
        </div>
    </section>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/fontawesome.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

